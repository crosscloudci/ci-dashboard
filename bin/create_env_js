#!/bin/bash

function usage() {
  echo "$(basename $0) [-f]"
}

if [ -z "$API_URL" ] ; then
  echo "Set API_URL environment variable, then run:"
  usage
  exit 1
fi

OVERWRITE_CONF=0

if [ "$1" = "-f" ] ; then
  OVERWRITE_CONF=1
fi

dev_config_file="config/dev.env.js"
prod_config_file="config/prod.env.js"

if [ ! -f "$dev_config_file" -a "$OVERWRITE_CONF" = 1 ] ; then
  cat <<-EOF> $dev_config_file
var merge = require('webpack-merge')
var prodEnv = require('./prod.env')

module.exports = merge(prodEnv, {
  NODE_ENV: '"development"',
    API_URL: '"$API_URL"'
  })
EOF
fi

if [ ! -f "$prod_config_file" -a "$OVERWRITE_CONF" = 1 ] ; then
  cat <<-EOF> $prod_config_file
module.exports = {
  NODE_ENV: '"production"',
    API_URL: '"$API_URL"'
    }
EOF
fi
